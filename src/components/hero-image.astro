---
import { Picture } from "@astrojs/image/components";
import heroImage from "~/assets/images/Hero.jpg";

const widths = [450, 800, 1200];
const sizes = "100vw";
---

<Picture
  class="object-cover w-full h-full"
  src={heroImage}
  widths={widths}
  sizes={sizes}
  alt="The ridged surface of the moon"
/>
